@Scripts.Render("~/bundles/jquery")
@Styles.Render("~/Content/themes/css/Partial")
@Styles.Render("~/Content/themes/css/layui")
@Scripts.Render("~/bundles/layui")
<script>
    //使用一个数据表格
    layui.use('table', function () {
        var table = layui.table, form = layui.form;
        //数据表格实例
        table.render({
            elem: '#TableDepartment'
          , height: 835
           , page: { //支持传入 laypage 组件的所有参数（某些参数除外，如：jump/elem） - 详见文档
               layout: ['count', 'prev', 'page', 'next', 'skip'] //自定义分页布局
           , groups: 2//只显示 2 个连续页码
           , limit: 15 //每页显示15条数据
           }
          , id: 'idTest'
          , toolbar: '#toolbarDemo'
          , url: '/Department/TableLoading' //数据接口
          , response:
              {
                  statusName: 'status' //规定数据状态的字段名称，默认：code
                , statusCode: 200 //规定成功的状态码，默认：0
                , msgName: 'hint' //规定状态信息的字段名称，默认：msg
                , countName: 'total' //规定数据总数的字段名称，默认：count
                , dataName: 'data' //规定数据列表的字段名称，默认：data
              }
          , request:
              {
                  pageName: 'curr' //页码的参数名称，默认：page
                , limitName: 'nums' //每页数据量的参数名，默认：limit
              }
          , cols: [[ //表头
              { field: 'depart_id', title: '序号', width: 100, sort: true, fixed: 'left', align: 'center', unresize: true }
            , { field: 'depart_no', title: '部门编码', width: 500, align: 'center', unresize: true }
            , { field: 'depart_name', title: '部门名称', width: 500, align: 'center', unresize: true }
            , { title: '操作', toolbar: '#barDemo', width: 500, align: 'center', unresize: true }
          ]]
        });

        //头工具栏事件
        table.on('toolbar(test)', function (obj) {
            var checkStatus = table.checkStatus(obj.config.id);
            switch (obj.event) {
                //新增事件
                case 'Add':
                    $("#Department").val("");//清空文本框值
                    $("#DepartmentNo").val("");
                    //实例一个弹出层
                    layer.open({
                        type: 1
                    , area: ['450px', '235px']
                    , content: $("#type-edit")
                    , title: '新增部门'
                    , btn: ['确定', '取消']
                    , yes: function (index, layero) {
                        //按钮【确定】的回调
                        //非空判断
                        if ($("#DepartmentNo").val() == "" && $("#Department").val() == "") {
                            alert("部门名称和部门编码不能为空！");
                        } else if ($("#Department").val() == "") {
                            alert("部门名称不能为空！");
                        } else if ($("#DepartmentNo").val() == "") {
                            alert("部门编码不能为空！");
                        }
                            //不为空时
                        else {
                            var reg = /\w+$/;//校检是否是字母数字下划线
                            var regnum = /^[0-9]*$/;//校检是否为纯数字
                            var regstr = /^[A-Za-z]+$/;//校检是否为纯字符
                            //先判断长度限制
                            if ($("#Department").val().length > 10) {
                                alert("部门名称不能大于10字！");
                            } else if ($("#DepartmentNo").val().length > 10) {
                                alert("部门编码不能大于10字符！");
                            }
                                //再格式限制/
                            else if (regnum.test($("#DepartmentNo").val())) {
                                alert("字符格式必须为“英文字母及数字的组合”");
                            }
                            else if (regstr.test($("#DepartmentNo").val())) {
                                alert("字符格式必须为“英文字母及数字的组合”");
                            }
                                //执行新增
                            else if (reg.test($("#DepartmentNo").val())) {
                                //查询待新增的值是否重名
                                $.ajax({
                                    url: '/Department/TableLoadingAddRpt',
                                    type: 'post',
                                    dataType: 'json',
                                    success: function (data) {
                                        //如果数据库有数据时
                                        if (data.length != 0) {
                                            var num = 0;//变量存储for执行次数
                                            for (var i = 0; i < data.length; i++) {
                                                //判断是否重名
                                                if ($("#DepartmentNo").val() == data[i].depart_no) {
                                                    // console.info(data[i].AsClass_no);
                                                    alert("品牌编码已存在");
                                                    return;
                                                } else if ($("#Department").val() == data[i].depart_name) {
                                                    alert("品牌名称已存在");
                                                    return;
                                                }
                                                else {
                                                    num += 1;
                                                    //当执行最后一次for时
                                                    if (num == data.length) {
                                                        //执行新增
                                                        $.ajax({
                                                            url: '/Department/AddDepartment',
                                                            type: 'post',
                                                            dataType: 'json',
                                                            data: { no: $("#DepartmentNo").val(), name: $("#Department").val() },
                                                            success: function (data) {
                                                                alert("新增成功！");
                                                                table.reload('idTest', {
                                                                    url: '/Department/TableLoading'
                                                                });
                                                                layer.close(index);
                                                            },
                                                            error: function (data) {
                                                                alert("新增失败！");
                                                                layer.close(index);
                                                            }
                                                        });
                                                    }

                                                }

                                            }
                                        }
                                        //如果数据库无数据时
                                        else {
                                            //执行新增
                                            $.ajax({
                                                url: '/Department/AddDepartment',
                                                type: 'post',
                                                dataType: 'json',
                                                data: { no: $("#DepartmentNo").val(), name: $("#Department").val() },
                                                success: function (data) {
                                                    alert("新增成功！");
                                                    table.reload('idTest', {
                                                        url: '/Department/TableLoading'
                                                    });
                                                    layer.close(index);
                                                },
                                                error: function (data) {
                                                    alert("新增失败！");
                                                    layer.close(index);
                                                }
                                            });
                                        }
                                    },
                                    error: function (data) {
                                        alert("");
                                    }
                                });

                            }
                            else {
                                alert("字符格式必须为“英文字母及数字的组合”");
                            }
                        }
                    }
                    , btn2: function (index, layero) {
                        //按钮【取消】的回调

                        //return false 开启该代码可禁止点击该按钮关闭
                    }
                    , cancel: function () {
                        //右上角关闭回调

                        //return false 开启该代码可禁止点击该按钮关闭
                    }
                    });
                    break;
            };
        });


        //监听行工具事件
        table.on('tool(test)', function (obj) {
            var $ = layui.jquery, layer = layui.layer, data = obj.data;
            //console.log(obj)
            //修改事件
            if (obj.event === 'edit') {
                var data = obj.data;
                $("#Department").val(data.depart_name);//传值
                $("#DepartmentNo").val(data.depart_no);
                //实例一个弹出层
                layer.open({
                    type: 1
                , area: ['450px', '235px']
                , content: $("#type-edit")
                , title: '修改部门'
                , btn: ['确定', '取消']
                , yes: function (index, layero) {
                    //按钮【确定】的回调
                    //非空判断
                    if ($("#DepartmentNo").val() == "" && $("#Department").val() == "") {
                        alert("部门名称和部门编码不能为空！");
                    } else if ($("#Department").val() == "") {
                        alert("部门名称不能为空！");
                    } else if ($("#DepartmentNo").val() == "") {
                        alert("部门编码不能为空！");
                    }
                        //不为空时
                    else {
                        var reg = /\w+$/;//校检是否是字母数字下划线
                        var regnum = /^[0-9]*$/;//校检是否为纯数字
                        var regstr = /^[A-Za-z]+$/;//校检是否为纯字符
                        //先判断长度限制
                        if ($("#Department").val().length > 10) {
                            alert("部门名称不能大于10字！");
                        } else if ($("#DepartmentNo").val().length > 10) {
                            alert("部门编码不能大于10字符！");
                        }
                            //再格式限制/
                        else if (regnum.test($("#DepartmentNo").val())) {
                            alert("字符格式必须为“英文字母及数字的组合”");
                        }
                        else if (regstr.test($("#DepartmentNo").val())) {
                            alert("字符格式必须为“英文字母及数字的组合”");
                        }
                            //执行修改
                        else if (reg.test($("#DepartmentNo").val())) {
                            //查询待修改的值是否重名
                            $.ajax({
                                url: '/Department/TableLoadingUpdateRpt',
                                type: 'post',
                                dataType: 'json',
                                data: { id: obj.data.depart_id },
                                success: function (data) {
                                    var num = 0;//变量存储for执行次数
                                    for (var i = 0; i < data.length; i++) {
                                        //判断是否重名
                                        if ($("#DepartmentNo").val() == data[i].depart_no) {
                                            // console.info(data[i].AsClass_no);
                                            alert("部门编码已存在");
                                            return;
                                        } else if ($("#Department").val() == data[i].depart_name) {
                                            alert("部门名称已存在");
                                            return;
                                        }
                                        else {
                                            num += 1;
                                            //当执行最后一次for时
                                            if (num == data.length) {
                                                //执行修改
                                                $.ajax({
                                                    url: '/Department/UpdateDepartment',
                                                    type: 'post',
                                                    dataType: 'json',
                                                    data: { id: obj.data.depart_id, no: $("#DepartmentNo").val(), name: $("#Department").val() },
                                                    success: function (data) {
                                                        alert("更改成功！");
                                                        table.reload('idTest', {
                                                            url: '/Department/TableLoading'
                                                        });
                                                        layer.close(index);
                                                    },
                                                    error: function (data) {
                                                        alert("更改失败！");
                                                        layer.close(index);
                                                    }
                                                });
                                            }

                                        }

                                    }
                                },
                                error: function (data) {
                                    alert("");
                                }
                            });

                        }
                        else {
                            alert("字符格式必须为“英文字母及数字的组合”");
                        }
                    }
                }
                , btn2: function (index, layero) {
                    //按钮【取消】的回调

                    //return false 开启该代码可禁止点击该按钮关闭
                }
                , cancel: function () {
                    //右上角关闭回调

                    //return false 开启该代码可禁止点击该按钮关闭
                }
                });
            }
        });

    });
</script>

