<div id="type-detail" style="display:none" name="type-detail">
    <br />
    <div class="layui-form-item">
        <label class="layui-form-label">存放地点名称：</label>
        <div class="layui-input-block">
            <label id="StoragePlaceInfo" class="labelInfo"></label>
        </div>
